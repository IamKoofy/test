def getEc2InstanceList(params) {
    def filter = (params.EC2_ALL_INSTANCES == 'yes') ? "" : "--filters Name=tag-value,Values='${params.APP_NAME}'"
    sh "aws ec2 describe-instances ${filter} --output text --query 'Reservations[*].Instances[*].InstanceId' > ./instance_id.list"
    readFile(file: './instance_id.list').readLines()
}
